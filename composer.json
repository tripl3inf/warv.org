{
    "name": "t3i-WP-Base",
    "description": "Custom WordPress Base/Starter Theme",

    "repositories": [
        {
            "type": "composer",
            "url": "http://wpackagist.org"
        }

    ],



    "require": {
        "php": ">=5.3.0",
        "composer/installers": "~1.0",
        "fancyguy/webroot-installer": "1.*",
        "wpackagist-plugin/clean-and-simple-contact-form-by-meg-nicholas": "4.3.4",
        "wpackagist-plugin/a-fresher-cache": "*",
        "wpackagist-plugin/piklist": "*",
        "wpackagist-plugin/wp-slimstat": "3.6.9"
    },

    "require-dev" : {
        "wpackagist-plugin/theme-check": "20131213.1",
        "wpackagist-plugin/wordpress-importer": "*",
        "wpackagist-plugin/wp-migrate-db": "*"
    },

    "autoload": {
    },



    "extra": {
        "webroot-dir": "wordpress",
        "webroot-package": "wordpress",
        "installer-paths": {
            "content/plugins/{$name}/": ["type:wordpress-plugin"],
            "content/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
            "content/themes/{$name}/": ["type:wordpress-theme"]
        }
    }

}

